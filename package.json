{
  "name": "scroll-editor-on-middle-click",
  "main": "./index.js",
  "version": "0.7.0",
  "description": "Allow middle click to scroll editor",
  "keywords": [
    "middle",
    "click",
    "scroll",
    "editor"
  ],
  "repository": "https://github.com/UziTech/atom-scroll-editor-on-middle-click",
  "license": "MIT",
  "engines": {
    "atom": ">=1.21.0"
  },
  "configSchema": {
    "selectors": {
      "type": "string",
      "default": "atom-text-editor:not([mini])",
      "title": "Selectors",
      "description": "Selectors to add scrolling."
    },
    "speed": {
      "type": "integer",
      "default": 5,
      "minimum": 1,
      "title": "Speed",
      "description": "The scrolling speed (higher is slower)."
    },
    "threshold": {
      "type": "integer",
      "default": 15,
      "minimum": 1,
      "title": "Threshold",
      "description": "The number of pixels the mouse has to be away from the origin in order to move."
    }
  }
}
